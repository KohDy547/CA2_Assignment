@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
    <table class="nav navbar-nav navbar-right">
        <tr>
            <td>
                <div class="align-self-center" style="padding:0px 5px 0px 5px;">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="My profile" 
                       style="text-decoration-style:none; color:aliceblue;"
                       >@UserManager.GetUserName(User)</a>
                </div>
            </td>
            <td>
                <button type="submit" class="btn btn-outline-light pull-right">Logout</button>
            </td>
        </tr>
    </table>
</form>
}
else
{
    <table class="nav navbar-nav navbar-right">
        <tr>
            <td>
                <a class="btn btn-outline-light" style="margin:0px 5px 0px 5px;"
                   asp-area="Identity" asp-page="/Account/Register">Register</a>
            </td>
            <td>
                <a class="btn btn-outline-light" style="margin:0px 5px 0px 5px;"
                   asp-area="Identity" asp-page="/Account/Login">Login</a>
            </td>
        </tr>
    </table>
}